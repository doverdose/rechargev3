<% layout('../layouts/default') -%>

<div class="js-checkinselector-container">
	<div class="page-header">
		<h2>
			<%= survey.title %>
		</h2>
	</div>
  <div>
    <h3>
      Questions
    </h3>
    
  </div>
	<% if(checkinsByTemplate.length) { %>
		<div class="list-group large-list">
			<% checkinsByTemplate.forEach(function(checkinTemplate) { %>
        <%= checkinTemplate._id %>
        <% if (checkinTemplate.checkins[0]) {%>
				<div class="list-group-item">
					<div class="row">
						<div class="col-xs-8">                            
							<a href="/checkin/<%= checkinTemplate.checkins[0].id %>">
								<strong title="<%= checkinTemplate.checkins[0].timestamp %>">
									<%=: checkinTemplate.checkins[0].timestamp | fromNow %>
								</strong>
								<h3 data-toggle="tooltip" data-placement="bottom" title="<%= checkinTemplate.checkins[0].tips || '' %>">
									<%= checkinTemplate.checkins[0].question %>
                  <%if(typeof questions != 'undefined'){%>
                    <% questions.forEach(function(question){%>
                    <p><%- question.text %></p>
                    <%})%>
                  <%}%>
								</h3>
							</a>
						</div>
						<form action="/checkin/edit" method="post" class="text-right col-xs-2">
							<input type="hidden" name="_csrf" value="<%= csrf_token %>">
							<input type="hidden" name="id" id="id" value="<%= checkinTemplate.checkins[0].id %>">
							<button type="submit" class="btn btn-info">Change</button>
						</form>
					</div>
				</div> 
       <% } else { %>
        <div class="list-group-item">
          <div class="row">
            <div class="col-xs-8">              
              <h3> <%= checkinTemplate.question %> </h3>
            </div>
          </div>
        </div>
       <% } %>
     <% }) %>
		</div>
	<% } else { %>
		<h4 class="text-center text-muted">You haven't made any check-ins for this survey</h4>
	<% } %>
</div>
