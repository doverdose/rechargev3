<% layout('../layouts/default') -%>

<div class="container">
	<div class="row">
		<div class="col-md-8 col-md-offset-2">

			<div class="page-header">
				<h2>Dashboard</h2>
			</div>

			<% for(var i = 0; i < stats.length; i++) { %>
				<div class="row stats">
					<div class="col-sm-4">
						<h3 class="text-muted"><%= stats[i].name %></h3>
					</div>
					<div class="col-sm-4">
						<strong>Logged-in</strong>
						<span class="label label-<%= (stats[i].words) ? 'success' : 'default' %>"><%= stats[i].users %></span>
					</div>
					<div class="col-sm-4">
						<strong>Check-ins</strong>
						<span class="label label-<%= (stats[i].words) ? 'success' : 'default' %>"><%= stats[i].checkins %></span>
					</div>
				</div>

				<div class="row stats">
					<div class="col-sm-4 col-sm-offset-4">
						<strong>Average # of words</strong>
						<span class="label label-<%= (stats[i].words) ? 'success' : 'default' %>"><%= stats[i].words %></span>
					</div>
					<div class="col-sm-4">
						<strong>Completion rate</strong>
						<span class="label label-<%= (stats[i].words) ? 'success' : 'default' %>"><%= stats[i].completion %>%</span>
					</div>
				</div>

				<div class="row stats">
					<div class="col-sm-4 col-sm-offset-4">
						<strong>Inactive users</strong>
						<span class="label label-<%= (stats[i].words) ? 'success' : 'default' %>"><%= stats[i].inactiveUsers %></span>
					</div>
				</div>
			<% } %>

		</div>
	</div>
</div>
