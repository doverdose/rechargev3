<% layout('../layouts/settings') -%>

<div class="row stats">
	<div class="col-xs-6">
		<h3>Following</h3>
	</div>
	<div class="col-xs-6 text-right">
	
		<button type="button" class="btn btn-default pull-right" rel="popover" data-placement="bottom" data-html="true" data-template=".js-following-popover-template">
			Follow user
		</button>
	</div>
</div>


<% if(user.following.length) { %>

	<ul class="list-group">

	</ul>

<% } else { %>

	<h4 class="text-muted text-center">You are not following any users. </h4>

<% } %>

<div class="js-template js-following-popover-template">
	<form action="/provider/user/add" method="post">
		<input type="hidden" name="_csrf" value="<%= csrf_token %>">
		<input type="hidden" name="providerId" id="providerId" value="<%= user.id %>">

		<div class="form-group">
			<label for="templateId">Select checkin type</label>
			<select class="js-checkinsearch" id="templateId" name="templateId">

			</select>
		</div>

		<button type="submit" class="btn btn-primary btn-block">
			Check-in
		</button>
	</form>
</div>
