<% layout('../layouts/default') -%>

<div class="container">
	<div class="row">
		<div class="col-md-8 col-md-offset-2">

			<h2>New Checkin Template</h2>

			<% if(typeof errors !== 'undefined') { %>
				<div class="alert alert-danger">
					<% for(error in errors) { %>

						<p>
							<%= errors[error].type %>
						</p>

					<% } %>
				</div>
			<% } %>

			<form role="form" action="/users" method="post" class="js-form-numpad">
				<input type="hidden" name="admin" value="true">
				<input type="hidden" name="_csrf" value="<%= csrf_token %>">

				<div class="form-group">
					<label for="type">Checkin type</label>
					<select class="form-control" name="type" id="type">
						<option value="longtext">Long text</option>
						<option value="shorttext">Short text</option>
						<option value="singlechoice">Single choice</option>
						<option value="multiplechoice">Multiple choice</option>
					</select>
				</div>

				<div class="form-group">
					<label for="title">Title</label>
					<input type="text" class="form-control" id="title" name="title" value="">
				</div>

				<div class="form-group">
					<label for="question">Question</label>
					<textarea class="form-control" id="question" name="question"></textarea>
				</div>


				<button type="submit" class="btn btn-primary btn-lg js-btn-submit">Create new checkin template</button>
			</form>

		</div>
  </div>
</div>